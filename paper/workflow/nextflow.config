process {
    $Atropos {
        ext {
            compressionArg = { (compression == "nowriter" ? "--no-writer-process" : "--compression ${compression}") }
        }
    }
}

profiles {
    local {
        params {
            dataDir = '/tmp/atropos'
            threadCounts = [ 4 ]
        }
        
        executor {
            name: "local"
            cpus: 4
        }
        
        docker {
            enabled = true
        }
    }

    cluster {
        params {
            dataDir = '/scratch/atropos'
            threadCounts = [ 4, 8, 16 ]
        }

        executor {
            name = 'sge'
            queueSize = 1
        }

        singularity {
            enabled = true
            runOptions = '-H $(pwd)'
        }
    }
}
