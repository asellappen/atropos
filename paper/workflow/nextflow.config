process {
    $Atropos {
        ext {
            compressionArg = { (compression == "nowriter" ? "--no-writer-process" : "--compression ${compression}") }
        }
    }
    $BwamethAlign {
        ext {
            readGroup = { "@RG\tID:${name}\tSM:${name}\tLB:${name}\tPL:ILLUMINA" }
        }
    }
}

profiles {
    local {
        params {
            threadCounts = [ 4 ]
            alignThreads = 4
            resultsDir = "results"
        }
        
        executor {
            name = "local"
            cpus = 4
        }
        
        docker {
            enabled = true
        }
    }

    cluster {
        process {
            beforeScript = "module load singularity"
        }
        
        params {
            threadCounts = [ 4, 8, 16 ]
            alignThreads = 16
            resultsDir = "$HOME/results"
        }

        executor {
            name = 'sge'
            queueSize = 1
        }

        singularity {
            enabled = true
        }
    }
}
